{{#if editSquad}}
    {{#partial "title"}}
        Edit {{squad.squadName}}'s Details
    {{/partial}}
{{else}}
    {{#partial "title"}}
        Add Squad
    {{/partial}}
{{/if}}
{{#partial "content"}}
    <br/>
    <div class="container row">
        <div class="col-md-4"></div>
        <div class="col-md-5">{{#if editSquad}}
            <h5 class="text-center">Edit Squad</h5>
            <hr>
            <form method="Post" action="/editsquad/{{squad.id}}">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Squad Name"
                           value="{{squad.name}}">
                </div>
                <div class="form-group">
                    <label for="cause">Cause</label>
                    <input type="text" class="form-control" id="cause" name="cause" placeholder="Squad Cause"
                           value="{{squad.cause}}">
                </div>
                <div class="form-group">
                    <label for="size">Size</label>
                    <input type="number" class="form-control" id="size" name="size" placeholder="Squad Size"
                           value="{{squad.max_size}}">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        {{else}}
            <h5 class="text-center">Add Squad</h5>
            <hr>
            <form method="Post" action="/addsquad">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Squad Name">
                </div>
                <div class="form-group">
                    <label for="cause">Cause</label>
                    <input type="text" class="form-control" id="cause" name="cause" placeholder="Squad Cause">
                </div>
                <div class="form-group">
                    <label for="size">Size</label>
                    <input type="number" class="form-control" id="size" name="size" placeholder="Squad Size">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        {{/if}}
            <div class="col-md-3"></div>
        </div>
{{/partial}}
{{> layout.hbs}}