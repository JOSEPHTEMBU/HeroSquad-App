            {{#if heroes}}
                <div class="col-md-6">
                    <h3>Heroes</h3>
                    <table class="table table-dark">
                        <thead>
                        <tr>
                            <th scope="col">Name</th>

                            <th scope="col">Details</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each heroes}}
                            <tr>
                                <td>{{name}}</td>

                                <td><a href="/heroes/{{id}}" class="btn btn-secondary">Details</a></td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                    <a href="/deleteallheroes" class="btn btn-danger">Delete All Heroes</a>

                </div>
            {{/if}}

            {{#if squads}}
