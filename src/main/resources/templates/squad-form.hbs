{{#partial "title"}}New Hero{{/partial}}
{{#partial "content"}}
    <div class="container">

        <form method="Post" action="/addsquad">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
            </div>
            <div class="form-group">
                <label for="cause">Cause</label>
                <input type="text" class="form-control" id="cause" name="cause" placeholder="Cause" required>
            </div>
            <div class="form-group">
                <label for="maxSize">Max Size</label>
                <input type="number" class="form-control" id="maxSize" name="maxSize" placeholder="Max Size" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
{{/partial}}
{{> layout.hbs}}